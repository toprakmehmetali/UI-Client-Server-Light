<Window x:Class="MyTaskAppClient.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:MyTaskAppClient"
        mc:Ignorable="d"
        Title="MainWindow" Height="200" Width="800">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>
        <Border Grid.Column="0">
            <Button Content="Button" Name="BtnLight" FontSize="48" Click="BtnLight_Click"/>

        </Border>
        <Border Grid.Column="1">
            <Button Content="Button" FontSize="48" Name="BtnRandom" Click="BtnRandom_Click"/>
        </Border>
    </Grid>
</Window>
